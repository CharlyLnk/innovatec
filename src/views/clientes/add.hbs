<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Registrar nuevo cliente</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre_cliente" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre_cliente" id="nombre_cliente" placeholder="Ej.: Juan Antonio" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="apellido_cliente" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="apellido_cliente" id="apellido_cliente" placeholder="Ej.: Pérez Ramírez" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="edad" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="edad" id="edad" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>