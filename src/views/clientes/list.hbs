<div class="container">
    <div class="row mt-5">
        {{#if clientes}}
        <div class="col-md-3">
            <table class="text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each}}
                        <tr>
                            <td>{{nombre_cliente}}</td>
                            <td>{{apellido_cliente}}</td>
                            <td>{{edad}}</td>
                            <td>
                                <div>
                                    <a href="#" class="btn btn-warning">Editar</a>
                                    <a href="#" class="btn btn-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Registro de clientes</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes registrar un cliente</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botÃ³n para registrar un nuevo cliente</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>